<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="12" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.duckmain.ghostcat.controller.LoginController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label text="닉네임을 입력하세요"/>
    <TextField fx:id="nicknameField" promptText="닉네임" />
    <HBox spacing="8">
        <Button text="다음" onAction="#onNextClick" />
        <Button text="종료" onAction="#onCancelClick" />
    </HBox>
    <Label fx:id="statusLabel" />
</VBox>